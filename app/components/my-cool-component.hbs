<div class="well">
    <h2 class="title">{{@title}} {{this.name}}</h2>
    {{yield}}  {{!-- Displays content between the starting and ending Component tag --}}
    {{#unless greetingSet}}
        <button class="left-space" {{action 'greetUser' this.name}}>Greet User</button>
    {{/unless}}
    {{#if greetingSet}}
        <h6 class="left-space">You have been greeted</h6>
    {{/if}}
</div>